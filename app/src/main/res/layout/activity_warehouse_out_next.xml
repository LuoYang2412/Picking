<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent">

    <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/spinner"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_picking_toolbar_spinner"
            android:paddingRight="50dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/spinner1"
            app:layout_constraintVertical_chainStyle="packed"/>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spinner1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_picking_toolbar_spinner"
            android:paddingRight="50dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/spinner2"
            app:layout_constraintVertical_chainStyle="packed"/>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spinner2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_picking_toolbar_spinner"
            android:paddingRight="50dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/radiusButton5"
            app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
            android:text="司机"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@+id/spinner"
            app:layout_constraintTop_toTopOf="@+id/spinner"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            android:textColor="@color/colorPrimary"/>

    <TextView
            android:text="车辆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@+id/spinner1"
            app:layout_constraintBottom_toBottomOf="@+id/spinner1"
            app:layout_constraintEnd_toEndOf="@+id/spinner1"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:text="车辆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@+id/spinner2"
            app:layout_constraintBottom_toBottomOf="@+id/spinner2"
            app:layout_constraintEnd_toEndOf="@+id/spinner2"
            android:layout_marginEnd="16dp"/>

    <com.luoyang.picking.ui.widget.RadiusButton
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:text="@string/done"
            app:textColor="@android:color/white"
            android:id="@+id/radiusButton5"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>